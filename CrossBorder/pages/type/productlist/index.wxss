/* pages/type/productlist/index.wxss */

page {
  background-color: #fff;
}

/* ==================
         搜索
 ==================== */

.search {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 999;
}

.search-center {
  margin: 0 16rpx;
  width: 718rpx;
  height: 60rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
}

.glass {
  margin: 0 16rpx;
  width: 30rpx;
  height: 30rpx;
}

.search-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 656rpx;
}

.search-center input {
  /* border: 1rpx solid red; */
  width: 520rpx;
  color: #999;
  /* height: 300rpx; */
}

.searchbtn {
  width: 120rpx;
  height: 60rpx;
  border-radius: 40rpx;
  background-color: #ffa500;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}

.clickstyle {
  background-color: rgba(255, 160, 0, 0.7);
}

.searchtip {
  color: rgba(153, 153, 153, 1);
  font-size: 24rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

/* ==================
         产品
 ==================== */

.productlist {
  margin-top: 80rpx;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
}

.product {
  width: 340rpx;
  height: 550rpx;
  border: 1rpx solid #f0f0f0;
  margin: 17.5rpx;
  position: relative;
}

.product>image {
  width: 336rpx;
  height: 280rpx;
}

.product>text {
  text-align: center;
  line-height: 40rpx;
  min-width: 60rpx;
  height: 40rpx;
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  top: 16rpx;
  right: 0rpx;
  background-color: #39b54a;
  border-radius: 20rpx 0rpx 0rpx 20rpx;
  padding: 0 15rpx;
}

.content {
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  width: 340rpx;
  height: 270rpx;
  padding: 16rpx;
}

.price {
  color: #ffa500;
  font-size: 32rpx;
}

.name {
  color: #666;
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.brand-visit {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.brand {
  color: #aaa;
  font-size: 22rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.visit {
  color: #aaa;
  font-size: 20rpx;
  max-width: 120rpx;
  min-width: 80rpx;
  text-align: center;
}
