/* ==================
         产品
 ==================== */

.product {
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  width: 100%;
  border: 1rpx solid #f0f0f0;
  position: relative;
}

.product>image {
  width: 100%;
  height: 616rpx;
}

.product>text {
  text-align: center;
  line-height: 40rpx;
  min-width: 60rpx;
  height: 40rpx;
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  top: 16rpx;
  right: 0rpx;
  background-color: #39b54a;
  border-radius: 20rpx 0rpx 0rpx 20rpx;
  padding: 0 15rpx;
}

.content {
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  width: 100%;
  height: 270rpx;
  padding: 16rpx;
  background-color: #fff;
}

.price {
  color: #ffa500;
  font-size: 32rpx;
}

.name {
  color: #666;
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.brand-visit {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.brand {
  color: #aaa;
  font-size: 22rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.visit {
  color: #aaa;
  font-size: 20rpx;
  max-width: 120rpx;
  min-width: 80rpx;
  text-align: center;
}
