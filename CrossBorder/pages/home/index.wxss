/* pages/home/index.wxss */

.search {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.scan {
  margin: 0 24rpx 0 24rpx;
  width: 44rpx;
  height: 44rpx;
}

.searchright {
  width: 640rpx;
  height: 50rpx;
  border: 2rpx solid #f1f2f3;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
}

.glass {
  margin: 0 24rpx 0 16rpx;
  width: 30rpx;
  height: 30rpx;
}

.searchright input {
  width: 100%;
  height: 300rpx;
}

.searchtip {
  color: rgba(153, 153, 153, 1);
  font-size: 24rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
